{
  "name": "edito-design-hack",
  "version": "1.2.0",
  "description": "Dépôt public des livres de la série Édito|Design|Hack",
  "scripts": {
    "package": "node ./make.js",
    "test": "node ./check.js",
    "ace": "npm run ace:edito && npm run ace:design && npm run ace:hack",
    "ace:design": "ace --force --subdir --outdir ./reports/ace ./dist/DesignDuLivreNumerique.epub",
    "ace:edito": "ace --force --subdir --outdir ./reports/ace ./dist/LEditorialNumerique.epub",
    "ace:hack": "ace --force --subdir --outdir ./reports/ace ./dist/HackLeLivre.epub"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JayPanoz/edito-design-hack.git"
  },
  "keywords": [
    "ebook",
    "livre numérique",
    "éditorial",
    "design",
    "édition"
  ],
  "author": "JayPanoz",
  "license": "CC-BY-NC-SA-4.0",
  "bugs": {
    "url": "https://github.com/JayPanoz/edito-design-hack/issues"
  },
  "homepage": "https://github.com/JayPanoz/edito-design-hack#readme",
  "devDependencies": {
    "@daisy/ace": "^1.1.1",
    "chalk": "^3.0.0",
    "epub-zip": "github:JayPanoz/epub-zip",
    "epubchecker": "^4.2.2"
  }
}
